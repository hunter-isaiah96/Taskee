        <shape android:shape="oval">
            <solid android:color="@color/colorAccent"></solid>
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="oval">
            <solid android:color="@color/colorAccent"></solid>
        </shape>
    </item>
